@{
    ViewData["Title"] = "Home Page";
}
@model ImageTriangles.ViewModels.ImageViewModel

<div class="container">
    <div class="row justify-content-md-center">

        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile">
            <div class="form-group">
                <div class="col-md ">
                    <h1 class="display-4 mb-5">Welcome</h1>
                    <p>Please select an image to upload.</p>
                    <input type="file" name="file" accept=".png,.jpg,.bmp,.jpeg"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md">
                    <input type="submit" value="Upload" />
                </div>
            </div>
            <div class="input-group input-group-sm mt-3">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </form>
    </div>
</div>